{
	"useTabs": true,
	"singleQuote": true,
	"semi": true,
	"trailingComma": "none",
	"printWidth": 80,
	"tabWidth": 4,
	"plugins": ["prettier-plugin-svelte"],
	"overrides": [
		{ "files": "*.svelte", "options": { "parser": "svelte" } },
		{
			"files": ["*.css", "*.json"],
			"options": {
				"tabWidth": 2,
				"useTabs": false
			}
		}
	]
}
